	<ItsSorceryFramework.LearningTrackerDef Abstract = "True" ParentName = "LearningTrackerBase" Name = "LearningTrackerProgress">
		<learningTrackerClass>ItsSorceryFramework.LearningTracker_Progress</learningTrackerClass>
		<bgPath>UI/LearningTrackers/LogicaBG</bgPath>
	</ItsSorceryFramework.LearningTrackerDef>
	
	<ItsSorceryFramework.LearningTreeNodeDef Abstract = "True" Name = "LearningTreeNodeBase">
